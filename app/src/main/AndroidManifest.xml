<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rtwsquared.android.sandpit" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rtwsquared.android.util.activity.JarDispatcherActivity"
            android:label="@string/title_activity_jar_dispatcher" >
        </activity>
        <activity
            android:name="com.rtwsquared.android.util.activity.ButtonDispatcherActivity"
            android:label="@string/title_activity_button_dispatcher" >
        </activity>
        <activity
            android:name="com.rtwsquared.android.util.activity.TableDispatcherActivity"
            android:label="@string/title_activity_table_dispatcher" >
        </activity>
        <activity
            android:name=".activities.ParentActivity"
            android:label="@string/title_activity_parent" >
        </activity>
        <activity
            android:name=".activities.ChildActivity1"
            android:label="@string/title_activity_child1" >
        </activity>
        <activity
            android:name=".media.SoundActivity"
            android:label="@string/title_activity_sound" >
        </activity>
        <activity
            android:name=".controls.ProgressURLDownloadActivity"
            android:label="@string/title_activity_progress_url_download" >
        </activity>
        <activity
            android:name=".controls.ProgressMockActivity"
            android:label="@string/title_activity_progress_mock" >
        </activity>
        <activity
            android:name=".storage.SimpleFileActivity"
            android:label="@string/title_activity_simple_file">
        </activity>
    </application>

</manifest>
