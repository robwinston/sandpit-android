<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rtwsquared.android.sandpit.controls.ProgressBarActivity">

    <TextView
        android:id="@+id/progress_bar_header_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress_text_header"/>

    <LinearLayout
        android:id="@+id/progress_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar_header_id"
        android:layout_marginTop="25dp"
        >

        <Button
            android:id="@+id/progress_bar_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress_as_bar_button_text"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_button_layout"
        android:max="100"
        android:layout_marginTop="25dp"
        />

</RelativeLayout>
